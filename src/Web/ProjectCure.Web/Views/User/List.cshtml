@using ProjectCure.Web.Models;
@using ProjectCureData.Models;
@model UserListModel
@{ ViewBag.Title = "User management"; }

<h1>User management</h1>
<p>Click on a name to make changes.</p>

<button id="unfilledEventsNotification" type="button" class="btn btn-default pull-left">Notification of unfilled events</button>

<a href="/User/Add" class="btn btn-primary pull-right" data-toggle="modal" data-target=".bs-edit-user-modal-lg">Add a new user</a>

<table id="userList" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Next event</th>
            <th colspan="2" class="align-right">Manage</th>
        </tr>
    </thead>
    <tbody>
        @Html.Partial("ListPartial", Model)
    </tbody>
</table>

<!-- User edit modal -->
<div class="modal fade bs-edit-user-modal-lg" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
</div>