@using ProjectCure.Web.Models;
@using ProjectCureData.Models;
@model UserListModel
@{ ViewBag.Title = "User management"; }

<div id="calendar-container" class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>User management</h1>
            </div>
            <div class="padd-bottom">
                <button id="unfilledEventsNotification" type="button" class="btn btn-black pull-left marg-right" data-loading-text="Sending Notifications...">Notification of unfilled events</button>
                <a href="/User/Add" class="btn btn-primary pull-left" data-toggle="modal" data-target=".bs-edit-user-modal-lg">Add a new user</a>
            </div>
            <table id="userList" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Next event</th>
                        <th colspan="2" class="align-right">Manage</th>
                    </tr>
                </thead>
                <tbody>
                    @Html.Partial("ListPartial", Model)
                </tbody>
            </table>
            <!-- User edit modal -->
            <div class="modal fade bs-edit-user-modal-lg" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            </div>
        </div>
    </div>
</div>