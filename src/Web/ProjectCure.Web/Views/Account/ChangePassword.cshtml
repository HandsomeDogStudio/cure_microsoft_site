@model ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
}
<div class="container">
    <div class="page-header">
        <h1>Change your password</h1>
    </div>
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()
        @Html.HiddenFor(m => m.UserName)
        
       <div class="form-group">
            <label for="@Html.NameFor(c => c.OldPassword)" class="col-sm-2 control-label">@Html.DisplayNameFor(c => c.OldPassword)</label>
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.OldPassword)
            </div>
        </div>        
       <div class="form-group">
            <label for="@Html.NameFor(c => c.NewPassword)" class="col-sm-2 control-label">@Html.DisplayNameFor(c => c.NewPassword)</label>
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.NewPassword)
            </div>
        </div> 
        
        <div class="form-group">
            <label for="@Html.NameFor(c => c.ConfirmNewPassword)" class="col-sm-2 control-label">@Html.DisplayNameFor(c => c.ConfirmNewPassword)</label>
            <div class="col-sm-10">
                @Html.PasswordFor(m => m.ConfirmNewPassword)
            </div>
        </div> 
                              
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Change password</button>
            </div>
        </div>
    }
</div>
