@model ProjectCure.Web.Models.EventDetailsModel

<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">@Model.Title</h4>
    </div>
    <form action="@Url.Content("~/events/" + Model.Id)" id="eventForm">
      <div class="modal-body">
        <h4>@Model.StartDateTime</h4>
        <h4>@Model.Description</h4>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary claim" data-confirm="Are you sure?">I Will Lead</button>
      </div>
    </form>
  </div>
</div>
